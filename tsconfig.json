{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "ESNext",
        "jsx":"react",
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths":{
            "~/*":[
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}